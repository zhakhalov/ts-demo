  "compilerOptions": {
      "module": "amd",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "target": "ES5",
      "rootDir": ".",
      "outDir": ".bin",
      "outFile": "./dest/js/app.js"
  },
  "filesGlob": [
    "app/**/*.ts"
  ],
  "exclude": [
    "bower_components"
  ]
}